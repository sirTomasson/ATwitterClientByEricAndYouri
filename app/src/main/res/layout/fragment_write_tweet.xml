<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:padding="8dp">

    <EditText android:id="@+id/et_write_tweet"
        android:padding="16dp"
        android:background="@color/colorPurtiestGrey"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout android:id="@+id/tweet_info_container"
        android:layout_marginTop="8dp"
        android:background="@color/colorTheBestGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/tv_char_count"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView android:id="@+id/tv_date_time"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/date_time_place_holder"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button android:id="@+id/btn_send_tweet"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="@string/send_tweet"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>