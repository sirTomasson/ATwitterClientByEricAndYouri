<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_profileImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_tweetText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ornare ornare ligula, ac volutpat lectus molestie eu. Praesent orci aliquam."
        app:layout_constraintLeft_toRightOf="@+id/iv_profileImg"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="141dp"
        android:layout_height="17dp"
        android:text="DD:MM:YYYY::HH:MM"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_profileImg"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_retweetCount"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        tools:layout_editor_absoluteY="58dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_retweets"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/tv_favoriteCount"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        tools:layout_editor_absoluteY="58dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorites"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:id="@+id/iv_retweets"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@mipmap/retweet"
        tools:layout_editor_absoluteX="294dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_retweetCount" />

    <ImageView
        android:id="@+id/iv_favorites"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@mipmap/favorite"
        tools:layout_editor_absoluteX="220dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tweetText" />

</android.support.constraint.ConstraintLayout>