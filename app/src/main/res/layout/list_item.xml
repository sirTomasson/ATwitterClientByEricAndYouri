<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:descendantFocusability="beforeDescendants">

    <ImageView
        android:id="@+id/iv_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_alignTop="@+id/tv_tweetText"
        android:layout_toStartOf="@+id/tv_tweetText" />

    <TextView
        android:id="@+id/tv_tweetText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ornare ornare ligula, ac volutpat lectus molestie eu. Praesent orci aliquam."
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="141dp"
        android:layout_height="17dp"
        android:text="DD:MM:YYYY::HH:MM"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile_img"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_below="@+id/iv_profile_img"
        android:layout_alignStart="@+id/iv_profile_img" />

    <ImageView
        android:id="@+id/iv_retweets"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@mipmap/retweet"
        tools:layout_editor_absoluteX="294dp"

        tools:layout_editor_absoluteY="58dp"
        android:layout_marginStart="37dp"
        android:layout_alignBottom="@+id/tv_date"
        android:layout_toEndOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_retweetCount"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/iv_retweets"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/iv_retweets"
        app:layout_constraintLeft_toRightOf="@+id/iv_retweets"
        tools:layout_editor_absoluteY="58dp" />

    <ImageView
        android:id="@+id/iv_favorites"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@mipmap/favorite"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_marginStart="27dp"
        android:layout_alignTop="@+id/tv_retweetCount"
        android:layout_toEndOf="@+id/tv_retweetCount" />

    <TextView
        android:id="@+id/tv_favorites_ount"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/iv_favorites"
        android:layout_toEndOf="@+id/iv_favorites"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="58dp" />

</RelativeLayout>